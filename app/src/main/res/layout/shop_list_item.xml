<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_bg"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="8dp"
        android:padding="5dp"
        android:src="@drawable/ic_opps_shop" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@id/list_icon"
        android:paddingTop="10dp"
        android:text="Name"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_name"
        android:layout_alignStart="@+id/licence_number"
        android:layout_alignLeft="@+id/licence_number"
        android:text="Owner Name"
        android:textColor="#FF9800" />

    <TextView
        android:id="@+id/licence_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/owner_name"
        android:layout_alignStart="@id/shop_name"
        android:layout_alignLeft="@id/shop_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Licence Number"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#3F51B5"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/divisionShoplist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/licence_number"
        android:layout_alignStart="@+id/licence_number"
        android:layout_alignLeft="@+id/licence_number"
        android:text="Division "
        android:textColor="#123" />
    <TextView
        android:id="@+id/cellnumberShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divisionShoplist"
        android:layout_alignStart="@+id/licence_number"
        android:layout_alignLeft="@+id/licence_number"
        android:text="Mobile "
        android:textColor="#123" />

    <TextView
        android:id="@+id/shop_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cellnumberShop"
        android:layout_alignStart="@+id/licence_number"
        android:layout_alignLeft="@+id/licence_number"
        android:layout_marginBottom="8dp"
        android:text="Address "
        android:textColor="#123" />


</RelativeLayout>