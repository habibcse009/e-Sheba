<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    android:orientation="vertical"
    tools:context=".ServiceProvider.Product.Order.OrderDetailsCHActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOrderInfoTitleCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Order Information"
                android:textColor="@color/colorRed_A400"
                android:textSize="35sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:background="@color/red_danger" />

            <TextView
                android:id="@+id/txt_order_idCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/card_bg_two"
                android:gravity="center"
                android:padding="10dp"
                android:text=" Order ID"
                android:textColor="#123" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Product Name"
                android:textColor="@color/colorRed_A400" />

            <TextView
                android:id="@+id/txt_product_nameCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:padding="16dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Price"
                android:textColor="@color/colorRed_A400" />

            <TextView
                android:id="@+id/txt_product_priceCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:padding="16dp"
                android:text="Tk.00"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Program Date"
                android:textColor="@color/colorRed_A400" />

            <TextView
                android:id="@+id/txt_program_dateCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_border"
                android:padding="16dp"
                android:text="31/12/2021"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="10dp"
                android:text="Shipping Information"
                android:textColor="#123" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:background="@color/red_danger" />

            <TextView
                android:id="@+id/txt_time_dateCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text=" time_date"
                android:textColor="@color/colorRed_A400" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Full Address"
                android:textColor="@color/colorRed_A400" />

            <TextView
                android:id="@+id/txt_full_addressCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Full Address" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Payment Methods"
                android:textColor="#123" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:background="@color/red_danger" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="bKash Transaction Number"
                android:textColor="@color/colorRed_A400" />

            <TextView
                android:id="@+id/txt_bkash_text_idCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_border"
                android:padding="16dp"
                android:text="XCVBNM"
                android:textColor="@color/Asphalt_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="10dp"
                android:text="Order Status"
                android:textColor="#123" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:background="@color/red_danger" />

            <TextView
                android:id="@+id/txt_order_statusCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text=" Order Status" />

            <TextView
                android:id="@+id/txt_call_retailerCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/card_bg"
                android:drawableLeft="@drawable/ic_call"
                android:gravity="center"
                android:paddingLeft="65dp"
                android:paddingTop="10dp"
                android:paddingRight="65dp"

                android:paddingBottom="10dp"
                android:text="Call Customer"
                android:textColor="@color/red_danger" />

            <Button
                android:id="@+id/txt_confirm_orderCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"

                android:gravity="center"
                android:padding="10dp"
                android:text="Confirm Order"
                android:textColor="#fff" />

            <Button
                android:id="@+id/txt_cancel_orderCH_OderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="Cancel Order"
                android:textColor="#fff" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>